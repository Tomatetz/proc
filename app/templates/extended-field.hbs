<label for=""> Название поля </label>
<input type="text" class="form-control textFieldName" placeholder="Введите название поля">
<label for=""> Добавить опцию </label>

<div class="selectOptionInput" role="alert">
    <div class="form-group">
        <div class="input-group">
            <input type="text" class="form-control optionName current">
            <span class="input-group-btn">
              <button class="btn btn-success addOption" type="button">+</button>
            </span>
        </div>
    </div>
</div>
<div class="list-group extendedFieldOptions">
    <h4 class="list-group-item-heading">Добавленные опции:</h4>
    <p class="list-group-item-text">
        <ul class="list-group optionsList">
        </ul>
    </p>
</div>
